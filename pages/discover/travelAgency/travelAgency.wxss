/* pages/discover/tourGuide/tourGuide.wxss */
.topbar {
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.row {
  display: flex;
  justify-content: center;
  align-items: center;
}
 
.arrow-box {
  width: 10%;
  text-align: center;
  height: 100%;
  float: left;
}
.arrow-box image {
  width: 30rpx;
  height: 34rpx;
}
.input-box {
  margin-top: 14rpx;
  width:60%;
  height: 60rpx;
  float: left;
  background-color: #f2f2f2;
  border-radius: 88rpx;
  margin-left: 20rpx;
	padding-left: 20rpx;
}
 
.input-box input {
  font-size: 24rpx;
  color: #333;
  width: 100%;
  padding-left: 7%;
}
.top-comend{
  width: 100%;
  height: 80rpx;
}




.box{
  padding: 0 20rpx;
}
.title{
  font-weight: 600;
  height: 80rpx;
  line-height: 80rpx;
}
/* 滑动nav按钮 */
.scenic_btn {
  background: white;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.select_scenic_btn{
  display: flex;
  white-space: nowrap;  
} 

._select {
  width:140rpx;
  text-align: center;
  line-height: 80rpx;
  display: inline-block; 
  color:white;
  margin:0 10rpx;
  background: #0082D7;
  border-radius: 10rpx;
box-shadow: #666 0px 0px 3px;
}
.select{
  line-height: 80rpx;
  width:140rpx;
  text-align: center;
  margin:5rpx 10rpx;
  display: inline-block;
  border-radius: 10rpx;
  box-shadow: #666 0px 0px 3px;
}
._select :nth-child(1){
 margin-left: 0rpx;
}
.scenic_btn input {
	width: 140rpx;
	text-align: center;
	height: 32px;
	border: 1px solid #ccc;
	border-radius: 5px 5px 0 0;
}


.scenic{
  display: flex;
  margin-top:20rpx;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.scenic image{
  width: 200rpx;
  height: 250rpx;
}
.detail{
  flex: 1;
  display: flex;
  flex-direction: column;
 justify-content: space-between;
  margin-left: 20rpx;
}
.icon{
  margin-top: 20rpx;
}
.Tag{
  margin-right:20rpx;
}
.traffic{
  color: #ccc;
  font-size: 30rpx;
   margin-top:20rpx;
}
.sell{
  display: flex;
  justify-content: space-between;
}
.price{
  color: red;
  font-weight: 600;
}
.grade{
  margin-right: 20rpx;
  color: #4C87FF;
}