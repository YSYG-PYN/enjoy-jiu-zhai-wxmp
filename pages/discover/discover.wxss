.scenic_btn input {
    width: 140rpx;
    text-align: center;
    height: 32px;
    border: 1px solid #ccc;
    border-radius: 5px 5px 0 0;
}


.recommend{
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 35rpx;
}

.scenicSpot{
    width: 49%;
    /*border: 1rpx solid #ccc;*/
    /*border-radius: 15rpx;*/
    margin-bottom: 30rpx;
    font-size: 25rpx;
    overflow: hidden;
}
.scenicSpot>image{
    width:100%;
    height:200rpx;
}

.scenicSpot-title{
    font-weight: bold;
    padding: 22rpx 10rpx 29rpx;
    color: #333;
    line-height: 40rpx;
}
.evaluate{
    display: flex;
    justify-content:space-between;
    align-items: center;
    /*height: 80rpx;*/
    padding: 0 10rpx;
}
.evaluate image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 14rpx;
}
.evaluate>view{
    /*margin-top: 20rpx;*/
    display: flex;
    align-items: center;
}
.evaluate>view:nth-child(1) text{
    color: #666;
    font-size: 22rpx;
    font-weight: 500;
}
.evaluate>view:nth-child(2) text{
    color: #999;
    font-size: 24rpx;
    font-weight: 500;
    margin-right: 14rpx;
}



