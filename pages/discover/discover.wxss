/* pages/discover/discover.wxss */
page{
    background-color: #F3F7FA;
}
.box{
    position: relative;
    background-color: #fff;
}
.header{
    display: flex;
    align-items: center;
    background-color: #fff;
}
.search{
    width:90%;
}
.tip{
    width: 48rpx;
    height: 44rpx;
    position: relative;
}
.tipCount{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 12rpx;
    top: 20rpx;
}

/* 轮播图 */
swiper{
    width: 100%;
    height: 400rpx;
}
.slide-image{
    width: 100%;
    height: 100%;
}


.nav {
    height: 229rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    padding-top: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.nav image {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 20rpx;
}
.nav text{
    color: #333;
    font-size:26rpx;
}

.nav .nav_content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #aaa
}
/* 线路推荐 */
.line_recommendation{
    /*height: 490rpx;*/
    background-color: #fff;
    margin-bottom: 20rpx;
}
.line_content_image .image{
    width:320rpx;
    height:250rpx;
}
.image_introduce{
    display: inline-block;
    width: 320rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    /*letter-spacing: 5rpx;*/
    /*color: #333;*/
}
.date{
    position: absolute;
    top: 0;
    left: 0;
    width: 100rpx;
    height: 48rpx;
    /*background: #0f0;*/
    border-radius: 20rpx;
    line-height: 48rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
}
.line_Item{
    position: relative;
    padding-bottom: 58rpx;
    padding-right: 30rpx
}
.lineTip{
    position: absolute;
    top: 0;
    left: 0;
    width:100rpx;
    height:48rpx;
}

.line_title {
    font-weight: 600;
    /*width: 100%;*/
    line-height: 32px;
    font-size: 32rpx;
    color: #333333;
    margin: 0;
    padding: 40rpx 19rpx 26rpx 29rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-family: PingFangSC-Semibold,PingFang SC;
}
.line{
    padding-left: 36rpx;
}

/* 发布 */
.issue{
    width: 100rpx;
    height:100rpx;
    position: fixed;
    right: 20rpx;
    top: 680rpx;
    z-index: 100;
}
._issue{
    display: none;
}
.issueImg{
    width: 100rpx;
    height:100rpx;
}


