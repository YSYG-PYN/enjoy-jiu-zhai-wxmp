/* 头部搜索返回、按钮 */
.topbar {
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.row {
  display: flex;
  justify-content: center;
  align-items: center;
}
 
.arrow-box {
  width: 10%;
  text-align: center;
  height: 100%;
  float: left;
}
.arrow-box image {
  width: 30rpx;
  height: 34rpx;
}
.input-box {
  margin-top: 14rpx;
  width:60%;
  height: 60rpx;
  float: left;
  background-color: #f2f2f2;
  border-radius: 88rpx;
  margin-left: 20rpx;
	padding-left: 20rpx;
}
 
.input-box input {
  font-size: 24rpx;
  color: #333;
  width: 100%;
  padding-left: 7%;
}
.top-comend{
  width: 100%;
  height: 80rpx;
}


.topic{
  margin-top: 20rpx;
}
.title{
  display: flex;
  align-items: center;
   padding: 0 20rpx;
}
.title text{
  font-weight: 600;
  margin-left: 20rpx;
}
.addTopic{
  padding-left:80rpx;
}