/* 头部搜索返回、按钮 */
.topbar {
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.row {
  display: flex;
  justify-content: center;
  align-items: center;
}
 
.arrow-box {
  width: 10%;
  text-align: center;
  height: 100%;
  float: left;
}
.arrow-box image {
  width: 30rpx;
  height: 34rpx;
}
.input-box {
  margin-top: 14rpx;
  width:60%;
  height: 60rpx;
  float: left;
  background-color: #f2f2f2;
  border-radius: 88rpx;
  margin-left: 20rpx;
	padding-left: 20rpx;
}
 
.input-box input {
  font-size: 24rpx;
  color: #333;
  width: 100%;
  padding-left: 7%;
}
.top-comend{
  width: 100%;
  height: 80rpx;
}


.box{
  padding:0 20rpx;
  font-size: 30rpx;
}

.strategy{
    font-weight: 600;
    margin-top: 20rpx;
    font-size: 35rpx;
}
/* 滑动nav按钮 */
.scenic_btn {
  background: white;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.select_scenic_btn{
  display: flex;
  white-space: nowrap;  
} 

._select {
  width:140rpx;
  text-align: center;
  line-height: 80rpx;
  display: inline-block; 
  color:white;
  margin:0 10rpx;
  background: #0082D7;
  border-radius: 10rpx;
box-shadow: #666 0px 0px 3px;
}
.select{
  line-height: 80rpx;
  width:140rpx;
  text-align: center;
  margin:5rpx 10rpx;
  display: inline-block;
  border-radius: 10rpx;
  box-shadow: #666 0px 0px 3px;
}
._select :nth-child(1){
 margin-left: 0rpx;
}
.scenic_btn input {
	width: 140rpx;
	text-align: center;
	height: 32px;
	border: 1px solid #ccc;
	border-radius: 5px 5px 0 0;
}

/* 推荐内容 */
.recommend{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.evaluate image{
  width: 30rpx;
  height: 30rpx;
}
.scenicSpot{
  width: 49%;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  font-size: 25rpx;
  padding-bottom: 10rpx;
}
.scenicSpot>image{
  width:100%;
  height:300rpx;
}
.detail{
  height: 130rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.scenicSpot-title{
  font-weight: 600;
  height: 40rpx;
}
van-tag{
  margin-right: 10rpx;
}
.ranking{
  color: #333;
}
