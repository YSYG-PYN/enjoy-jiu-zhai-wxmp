/* pages/foodBeverage/foodBeverage.wxss */
page{
    background: #F6F7F8;
}
.top_ipt{
    width: 100%;
    height: 100rpx;
    background: #fff;
    padding-top:44rpx;
    display: flex;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
}
.ipt_content{
    display: flex;
    width: 60%;
    height: 80rpx;
    background: #F6F7F8;
    border-radius: 50rpx;
    align-items: center;
    padding-left: 40rpx;
}
.top_ipt image{
    width: 40rpx;
    height:40rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}
.top_ipt input{
    width: 50%;
    height: 80rpx;
    background: #F6F7F8;
    padding-left: 40rpx;
    box-sizing: border-box;
}
.top_ipt .place_holder{
    font-size: 30rpx;
}
.food_beverage_content{
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 144rpx;
}
.food_beverage_tit{
    width: 100%;
}
.van-sticky-wrap--fixed {
    top: 136rpx !important;
    z-index: 2;
}
    
.van-tab--active{
    color: #4B9AED !important;
}
.sort_btn{
    display: flex;
    color: #333333;
    font-size: 26rpx;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.price_title .sbtn,.sort_btn .sbtn{
    padding: 16rpx 28rpx;
    margin: 40rpx;
    margin-left: 0;
    background: #fff;
    box-shadow: 0 0 3px #ccc;
    border-radius: 4px;
    margin-bottom: 0;
}
.food_list,.food_perlist{
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.food_perlist{
    padding: 0;
    display: flex;
    font-size: 24rpx;
    padding: 40rpx 0;
    border-bottom: 1px solid #eee;
}
.food_perlist image{
    width: 220rpx;
    height: 220rpx;
}
.food_perlist .food_list_detail{
    width: calc(100% - 220rpx);
    padding-left: 20rpx;
    box-sizing: border-box;
}
.food_restaurant{
    font-size: 32rpx;
    color: #333333;
    font-weight: 600;    
}
.food_address{
    margin-top: 24rpx;
    color: #999;
    display: flex;
    align-items: flex-end;
    margin-bottom: 56rpx;
}
.food_address_left,.food_address_right{
    display: flex;
    align-items: flex-end;
}
.food_address_right{
    flex-direction: column;
    align-items: flex-start;
    margin-left: 40rpx;
}
.food_address_right text:nth-of-type(2){
    color: #333333;
}
.food_price_time{
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}
.food_price text:nth-of-type(1){
    font-size: 32rpx;
    font-weight: bold;
}
.food_ranking{
    color: #4B9AED;
    margin-right: 20rpx;
}

.findMore{
    width: 100%;
    text-align: center;
    line-height: 48px;
    color: #333333;
    font-size: 28rpx;
}
.change_back{
    background-color: #4B9AED !important;
    color: #fff;
}
.confrim_time_btn{
	width: 95%;
	border-radius: 25px;
	background: #4B9AED;
	box-sizing: border-box;
	color: #fff;
    height: 80rpx;
    line-height: 80rpx;
} 
.price_overlay{
    width: 100%;
    height: 40%;
    padding: 20rpx;
    padding-top: 30rpx;
}
.price_title{
    display: flex;
    flex-wrap: wrap;
    font-size: 12px;
    color: #333333;
}
.change_price{
    color: #4B9AED;
    background:rgba(237,246,255,1) !important;
}
.van-tree-select__item--active {
    color: #4B9AED !important;
}