<!--pages/addSite/addSite.wxml-->
<view class="box">
       <view class="input">
              <label>姓名</label>
              <input placeholder="请输入您的姓名"></input>
        </view>
         <view class="input">
              <label>手机号</label>
              <input placeholder="请输入您的手机号码"></input>
        </view>
         <view class="input">
              <label>选择地区</label>
            
        </view>
         <view class="input">
              <label>详细地址</label>
              <input placeholder="请输入您的详细地址"></input>
        </view>
        <view class="switch">
          <label>设为默认</label>
           <van-switch checked="{{ checked }}"  inactive-color="#ccc" bind:change="onChange" />
        </view>
</view>

<view class="fouter">
    <van-button type="primary" block bindtap="addLinkman">保存</van-button>
</view>
