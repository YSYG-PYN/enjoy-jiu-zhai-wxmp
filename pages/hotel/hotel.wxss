/* pages/hotel/hotel.wxss */
.swiper{
    width:750rpx;
    height:370rpx;
  }
  .swiper image{
    width:100%;
    height:370rpx;
  }
  .content{
      width: 700rpx;
      margin: 10px;
  }
  .scoll_view{
      width: 750rpx;
      display: flex;
      white-space: nowrap;
      flex-direction: row;
      flex-wrap:nowrap;
  }
  button{
      margin-top: 20px;
      margin-right: 10px;
      background: #fff;
      box-shadow:0px 0px 4px 1px rgba(0,0,0,0.1);
  }
  .inp{
      background-color: #f5f5f5;
      width: 700rpx;
      border-radius: 10px ;
      display: flex;
      justify-content: space-between;
      height: 80rpx;
      margin-top: 10px;
  }
  .city{
    font-size: 13px;
    font-weight: normal;
    color: #696969;
  }
  .left{
      width: 100rpx;
      display: flex;
      align-items: center;
      margin-left: 10px;
  }
  .right{
      display: flex;
      align-items: center;
  }
  .arrow{
      font-size: 12px;
      margin-right: 10rpx;
  }
  .search{
    border-left: 1px solid #D3D3D3;
      margin-left: 10rpx;
      padding-left: 20rpx;
      font-size: 18px;
  }
  .right{
      flex: 1;
  }
  input{
      width: 100%;
      font-size: 13px;
      color: #696969;
      /* margin-top: 10rpx; */
      margin-left: 2px;
  }
  .data{
      height: 80rpx;
      background: #f5f5f5;
      border-radius: 10px;
      margin-top: 20rpx;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #696969;
      font-size: 14px;
      position: relative;
  }
  .van-button--info{
      box-shadow: none;
      width: 100%;
  }
  .order{
      display: flex;
      justify-content: center;
      margin-top: 30rpx;
  }
  .collect{
      text-align: center;
  }
  .collect,.hotel{
    display: flex;
}
  .collect .van-icon-star-o,.hotel .van-icon-label-o{
      color: #999;
      margin-right: 10rpx;
      font-size: 25px;
  }
  .browse,.hotel_order{
      font-size: 28rpx;
      color: #999;
      margin-top: 5px;
  }
  .xian{
      color: #D3D3D3;
      margin: 0 20px;
      margin-top: 8rpx;
  }
.bg{
    width: 100%;
    background: #f5f5f5;
    height: 5px;
}
.special {
    width: 700rpx;
}
.header{
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}
.header .van-icon-arrow{
    color: #D3D3D3;
}
.floor{
    display: flex;
    white-space: nowrap;
      flex-direction: row;
      flex-wrap:nowrap;
}
.lists{
    margin-top: 20rpx;
    margin-right: 20rpx;
}
.lists image{
    width: 300rpx;
    height: 200rpx;
    border-radius: 5px;
}
.distance{
    width: 200rpx;
}
.distance p,.distance text{
    color: #696969;
    font-size: 12px;
}
.aa{
    margin-right: 4rpx;
}
.home{
    display: flex;
    font-size: 13px;
    color: #696969;
}
.middle{
    margin: 0 10rpx;
}
.money{
    font-size: 12px;
    color: #D3D3D3;
}
.van-picker{
    width: 750rpx;
    z-index: 999;
    height: 635rpx;
    position: absolute !important;
    top: 44px;
    left: 0;
}
.van-picker__confirm{
    margin-right: 20px;
}
.ipt{
    text-align: right;
    margin-right: 5px;
}
.ipt1{
    margin-left: 5px;
}