/* pages/hotel/search/details/user_Comment/user_Comment.wxss */
.topbar {
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  text-align: center;
}
.row {
  display: flex;
  justify-content: center;
  align-items: center;
}
.arrow-box {
  width: 10%;
  text-align: center;
  height: 100%;
  float: left;
  margin-top: 2px;
}
.arrow-box image {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 10px;
}
.xing {
  width: 88%;
  text-align: center;
  height: 100%;
  margin-top: 11px;
  margin-right: 95px;
}
.top-comend {
  width: 100%;
  height: 80rpx;
}
.grade {
  width: 100%;
  height: 314rpx;
  background: #f4fbff;
  border: 1px solid transparent;
}
.grade_head {
  display: flex;
  justify-content: left;
  align-items: flex-end;
}
.num {
  font-size: 60px;
  font-weight: bold;
  color: #333;
  margin-top: 22px;
  margin-left: 12px;
}
.then {
  /* float: left; */
  color: #999;
  font-size: 12px;
  margin-left: 6px;
  margin-bottom: 20px;
}
.van-rate {
  margin-left: 12px;
}
button{
    display: inline-block;
}
.btn {
  background: #ecf4f5;
  width: 164rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 4px;
  color: #799cae;
  margin-top: 20px;
  font-size: 14px;
}
button:nth-child(1){
    margin-left: 12px;
    margin-right: 10px;
}
button:nth-child(2){
    margin-right: 10px;
}
button:nth-child(3){
    width: 210rpx;
}
button:nth-last-child(1){
    width: 210rpx;
    margin-top: 10px;
   text-align: left;
   margin-left: 12px;
}
button::after {
  border: none !important;
}
.user{
    margin-top: 30px;
    margin-left: 12px;
}
.user_head{
    display: flex;
    align-items: flex-start;
}
.van-image{
    width: 94rpx !important;
    height: 94rpx !important;
}
.user_tit{
    margin-left: 10px;
    margin-top: 5px;
    display: flex;
    flex-direction: column;
}
.travl{
    color: #333;
    font-size: 12px;
    margin-bottom: 6px;
}
.data{
    color: #999;
    font-size: 12px;
}
.hotel{
    margin-top: 8px;
    font-size: 14px;
    color: #666;
}
.img{
    display: flex;
}
.imges{
    width: 120rpx;
    height: 120rpx;
    margin-right: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
}