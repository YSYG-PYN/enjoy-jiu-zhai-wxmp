/* pages/hotel/Order/Order.wxss */
.topbar {
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.row {
  display: flex;
  justify-content: left;
  align-items: center;
  margin-bottom: 5px;
}
.arrow-box {
  width: 65%;
  text-align: left;
  height: 100%;
  float: left;
  margin-top: 2px;
}
.arrow-box image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 152px;
  margin-left: 5px;
}
.top-comend {
  width: 100%;
  height: 80rpx;
}
.van-ellipsis,.van-tab{
    width: 120rpx !important;
}
.van-tabs__wrap--scrollable .van-tab{
    flex: none !important;
}
.van-tab{
    padding: 0 !important;
}
.van-tabs__line{
    background: #4b9aed !important;
    /* padding-bottom: 5px !important; */
    margin-bottom: 5px !important;
}
.van-hairline--bottom:after,.van-hairline--left:after,.van-hairline--right:after,.van-hairline--surround:after,.van-hairline--top-bottom:after,.van-hairline--top:after,.van-hairline:after{
    border: none !important;
}
.van-tab--active{
    color: #4b9aed !important;
}
.van-tabs__nav,.van-tabs__wrap{
  border-bottom: 10px solid #F7F7F9 !important;
}
.van-tab__pane{
  padding-top: 20px;
  padding-left: 10px;
  box-sizing: border-box;
}
.bigHotel{
  font-size: 14px;
  color: #333;
  font-weight: bold;
}
.obligation{
  display: flex;
  justify-content: space-between;
}
.pic image{
  width: 140rpx;
  height: 140rpx;
}
.one{
  display: block;
  font-size: 12px;
  color: #999;
  margin-top: 10px;
  margin-bottom: 5px;
}
.room,.price{
  display: block;
  font-size: 12px;
  color: #999;
  margin-bottom: 5px;
}
.van-button--info{
  width: 144rpx !important;
  height: 60rpx !important;
  border-radius: 3px !important;
}
.van-button--normal{
  padding: 0 !important;
}
.van-button--default{
  width: 104rpx !important;
  height: 60rpx !important;
  border-radius: 3px;
  box-shadow:0px 0px 4px 1px rgba(0,0,0,0.1);
}
.head{
  padding-bottom: 20px;
  box-sizing: border-box;
  border-bottom: 1px solid #E6E6E6;
}