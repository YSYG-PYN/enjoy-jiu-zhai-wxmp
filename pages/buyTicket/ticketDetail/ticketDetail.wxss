/* pages/buyTicket/ticketDetail/ticketDetail.wxss */
.single_ticket_detail {
	width: 100%;
	display: flex;
	flex-direction: column;
	/* align-items: center; */
	justify-content: center;
}

.ticket_position {
	position: relative;
}

.ticket_share_icon {
	position: absolute;
	right: 20rpx;
	top: 20rpx;

}

.ticket_share_icon image {
	width: 60rpx;
	height: 60rpx;
	margin-right: 20rpx;
}

.ticket_list_content,
.ticket_detail_tit,
.title_detail_map {
	width: 100%;
	font-size: 28rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
	margin-top: 20rpx;
}

.title_list_car,
.ticket_detail_time,
.ticket_tit_address,
.ticket_detail_detail,
.title_detail_map {
	font-weight: 600;
	display: flex;
	width: 100%;
	justify-content: space-between;
}

.ticket_detail_time,
.ticket_detail_detail {
	font-weight: normal;
	font-size: 24rpx;
	color: #888;
	margin-top: 10rpx;
}

.ticket_detail_detail image,
.title_detail_map image {
	width: 24rpx;
	height: 24rpx;
}

.title_detail_map image {
	margin-right: 10rpx;
}

.title_detail_map {
	font-size: 28rpx;
	font-weight: normal;
	justify-content: space-around;
	align-items: center;
	border: 1px solid #ccc;
	box-sizing: border-box;
	padding-top: 20rpx;
	padding-bottom: 10rpx;
}

.map {
	min-width: 40px;
	color: #888;
}

.ticket_list_content .list_tit {
	line-height: 32px;
	font-size: 30rpx;
}

.ticket_list_content .list_btn {
	display: flex;
}

.ticket_list_content .list_btn .btn_order {
	width: 100rpx;
	font-size: 12px;
	border-radius: 3px 3px 0 0;
	border: 1px solid #ccc;
	text-align: center;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.title_list_car {
	flex-direction: column;
	box-shadow: 0px 0px 6px #aaa;
	margin-top: 20rpx;
	border-radius: 5px;
}

.car_tit {
	line-height: 42px;
	padding-left: 20rpx;
}

.ticket_car_detail {
	font-weight: normal;
	border: 1px solid #ccc;
	margin-bottom: 20rpx;
	display: flex;
	box-sizing: border-box;
	width: 100%;
	padding-top: 20rpx;
	padding-left: 16rpx;
	justify-content: space-between;
	background: #ECF4F5;
}

.car_advance {
	width: 220rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.car_price {
	display: flex;
	font-size: 14px;
	align-items: center;
}

.advance {
	background: #4B9AED;
	color: #fff;
	width: 150rpx;
	text-align: center;
	border-radius: 5px;
	margin-top: 14rpx;
}

.line_through {
	font-size: 12px;
	text-decoration: line-through;
	color: #888;
}

.car_detail {
	font-size: 24rpx;
	color: #888;
}

.car_detail .car_detai_tit {
	font-size: 28rpx;
	color: #000;
}

.change_color {
	color: #4B9AED;
}

.close {
	width: 100%;
	border: 0;
	font-weight: normal;
	border: none !important;
	padding: 0;
	background: none;
	color: #333;
}


.swiperContainer {
	width: 100%;
	height: 400rpx;
  }
  .swiperImgs{
	position: relative;
  
  }
  .swiperimg {
	border-radius: 10rpx;
	width: 100%;
	height: 100%;
  }
