/* pages/buyTicket/ticketDetail/orderTicket/orderTicket.wxss */
.van-action-sheet__header {
	text-align: left !important;
	font-size: 16px  !important;
	font-weight: 600  !important;
	padding-left: 30rpx  !important;
}
.show,.choose_time_tit,.choose_price,.choose_time_point,.btn_content{
	color: #FF3C3C;
	font-size: 24rpx;
	width: 100%;
	padding-left: 30rpx;
	box-sizing: border-box;
}
.choose_price text:nth-of-type(1){
	font-size: 38rpx;
	font-weight: 500;
	margin-right: 20rpx;
	height: 100rpx;
	line-height: 100rpx;
	margin-bottom: 20rpx;

}
.choose_price text:nth-of-type(2){
	color: #888;
}
.choose_time_tit{
	color: #666;
	font-size: 28rpx;
	height: 54rpx;
	line-height: 54rpx;
}
.choose_time_btn{
	width: 100%;
	padding: 0 30rpx;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
}
.time_specific{
	width: 176rpx;
	height: 120rpx;
	background: #ECF4F5;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 26rpx;
	color: #999;
	border-radius: 10px;
	position: relative;
}
.time_specific text:nth-of-type(2){
	font-size: 28rpx;
	margin-top: 10rpx;
}
.choose_time_point{
	color: #9EC2E8;
	font-size: 24rpx;
	line-height: 36px;
}
.btn_content{
	padding-right: 30rpx;
}
.confrim_time_btn{
	width: 100%;
	border-radius: 25px;
	background: #4B9AED;
	box-sizing: border-box;
	color: #fff;
	height: 80rpx;
line-height: 80rpx;

}
.choose_more{
	color: #333;
	width: 80rpx;
}


.time_specific .mask{
	width: 100%;
	height: 100%;
	position: absolute;
	left: 0;
	top: 0;
	display: flex;
	justify-content: flex-end;
	align-items: flex-end;
	background: rgba(0, 0, 0, 0);
}
.mask image{
	width: 60rpx;
	height: 60rpx;
	position: absolute;
	margin: auto;
	bottom: 0;
	right: 0;
	border-radius: 100% 0 0 0;
}
.active{
	background-color: rgb(129, 185, 243);
	color: #fff;
}