.shop{
    width: 100%;
}
.index_searchIpt_content {
    width: 95%;
    height: 70rpx;
    font-size: 28rpx;
    line-height: 48rpx;
    border-radius: 35rpx;
    background:rgba(246,247,248,1);
    padding-left: 17px;
    box-sizing: border-box;
    margin: 0rpx auto;
}

.ipt_search_icon {
    margin-top: 18rpx;
    float: left;
}

.index_searchIpt{
    float: left;
    margin-top: 10rpx;
    margin-left: 12rpx;
}
.shopColumn{
    width: 100%;
    height: 176rpx;
    background:rgba(75,154,237,1);
    padding: 44rpx 50rpx 0rpx;
    box-sizing: border-box;
}
.shopPic{
    width: 92rpx;
    height: 92rpx;
    float: left;
    margin-right: 16rpx;
}
.shopPic image{
    width: 92rpx;
    height: 92rpx;
}
.shopMsg{
    float: left;

}
.shopMsg>view:nth-child(1){
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:bold;
    color:rgba(255,255,255,1);
    line-height:36rpx;
    margin-bottom: 18rpx;
}
.shopMsg image{
    width: 28rpx;
    height: 28rpx;
    float: left;
}
.shopMsg text{
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:25rpx;
    float: left;
}
.shop .van-tabbar-item{
    -webkit-flex-direction: row;
    flex-direction: row;
}
.van-tabbar-item .van-tabbar-item__icon{
    margin: 0px;
}
.shop .van-tabbar{
    border-top: 1px solid #E6E6E6;
}
.shopContent{
    padding: 40rpx 32rpx;
    box-sizing: border-box;
    margin-bottom: 100rpx
}
.shopping{
    height: 352rpx;
    position: relative;
    margin-bottom: 40rpx;
}
.shopping image{
    width: 100%;
    height: 100%;
    position: absolute;
}
.money{
    width: 176rpx;
    height: 50rpx;
    background:rgba(255,193,62,1);
    position: absolute;
    text-align: center;
    font-size:12px;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:bold;
    color:rgba(255,255,255,1);
    top: 60rpx;
    line-height: 50rpx;
}
.money text{
    font-size: 16px;
    font-weight: bold;
}
.produce{
    width: 100%;
    height: 100rpx;
    background:rgba(0,0,0,0.5);
    position: absolute;
    bottom: 0rpx;
    padding: 10rpx 36rpx;
    font-size:14px;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    box-sizing: border-box;
}
.screen{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
.myBtn{
    width: 144rpx;
    height: 60rpx;
    border: none;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 4px 1px rgba(0,0,0,0.1);
    border-radius:3px;
    font-size:12px;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.produces{
    height: 256rpx;
    padding: 16rpx 0rpx 24rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #E6E6E6;
    display: flex;
    justify-content: space-between;
}
.pic{
    width: 220rpx;
    height: 216rpx;
    position: relative;
}
.pic image{
    width: 100%;
    height: 100%;
}
.introduce{
    width: 420rpx;
    height: 100%;
    position: relative;
}
.title{
    font-size:14px;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:20px;
}
.picIntroduce{
    width: 100%;
    height: 36rpx;
    background:rgba(0,0,0,0.5);
    border-radius:0px 0px 4px 4px;
    text-align: center;
    line-height: 36rpx;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    bottom: 0rpx;
}
.proMoney{
    font-size: 24rpx;
    color: #FF3C3C;
    font-weight:400;
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
}
.proMoney text:nth-child(2){
    font-size: 32rpx;
    font-weight: bold;
}
.proMoney text:nth-child(3){
    color: #999999;
}
.salesVolum{
    font-size: 24rpx;
    color: #999;
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
}
.btnHover{
    background: #499BEB;
    color: #fff;
}