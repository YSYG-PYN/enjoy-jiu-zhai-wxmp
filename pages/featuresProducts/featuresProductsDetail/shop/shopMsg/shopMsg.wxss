.shopMessage{
    width: 100%;
}
.shopColumn{
    width: 100%;
    height: 176rpx;
    /*background:rgba(75,154,237,1);*/
    padding: 44rpx 50rpx 0rpx;
    box-sizing: border-box;
}
.shopPic{
    width: 92rpx;
    height: 92rpx;
    float: left;
    margin-right: 16rpx;
}
.shopPic image{
    width: 92rpx;
    height: 92rpx;
}
.shopMsg{
    float: left;

}
.shopMsg>view:nth-child(1){
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:36rpx;
    margin-bottom: 18rpx;
}
.shopMsg>view:nth-child(2){
    width: 110rpx;
    height: 36rpx;
    background:rgba(75,154,237,1);
    border-radius:4px;
    text-align: center;
    line-height: 36rpx;
    font-size:12px;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.shopMsg image{
    width: 28rpx;
    height: 28rpx;
    float: left;
}
.shopMsg text{
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:25rpx;
    float: left;
}
.serviceTel, .shopQualifications{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 34rpx 32rpx 34rpx 24rpx;
}
.shopDetail image{
    width: 44rpx;
    height: 44rpx;
}
