/* pages/featuresProducts/featuresProductsDetail/shopCar/placeOrder/addressList/addressList.wxss */
#person, #address{
    text-align: left;
}
van-radio{
    display: flex;
    align-items: center;
}
#person{
    font-size: 32rpx;
    font-weight: bold;
    color:rgba(51,51,51,1);
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
}
#person text:nth-child(1){
    margin-right: 20rpx;
}
#person text:nth-child(2){
    margin-right: 30rpx;
}
#person text:nth-child(4){
    font-size: 24rpx;
    color:rgba(153,153,153,1);
}
#address{
    width: 80%;
    font-size: 26rpx;
    color:rgba(102,102,102,1);
    letter-spacing: 1px;
    line-height: 37rpx;
}
.addAddress{
    margin-top: 56rpx;
    display: flex;
    align-items: center;
    padding: 0px 16px;
}
.addAddress image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
}
.addAddress text{
    font-size: 24rpx;
    color:rgba(102,102,102,1);
}
