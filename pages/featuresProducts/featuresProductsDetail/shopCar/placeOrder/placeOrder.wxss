.clear{
    clear: both;
}
#box{
    padding: 0rpx 64rpx 0rpx 64rpx;
    box-sizing: border-box;
    margin: 0rpx;
    margin-bottom: 120rpx;
}
.receivingAddress{
    position: relative;
    margin-top: 60rpx;
    margin-bottom: 80rpx;
}
.personal{
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:44rpx;
    margin-bottom: 10rpx;
}
.address{
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    letter-spacing:1px;
    width: 80%;
}
.commodityDetail{
    margin-top: 40rpx;
}
.commodityDetail image{
    width: 170rpx;
    height: 170rpx;
    /*margin-left: 85rpx;*/
    border-radius: 5px;
    float: left;
}
.commoditySj{
    float: left;
    margin-left: 20rpx;
    width: 65%;
}
.commodityName{
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
}
.commodityType{
    font-size:20rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:bold;
    color:rgba(153,153,153,1);
    margin-top: 30rpx;
}
.commodityMoney{
    margin-top: 10rpx;
}
.commodityMoney text:nth-child(1){
    font-size:20rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:bold;
    color:rgba(255,60,60,1);
}
.commodityMoney text:nth-child(2){
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:bold;
    color:rgba(255,60,60,1);
}
.van-checkbox__icon-wrap{
    margin: 24rpx 0rpx 0rpx 24rpx;
}
.van-button--square{
    background-color: #4A9AED;
    border-radius: 20rpx;
}
.carts-container{
    width: 100%;
    background: #fff;
    margin-bottom: 52rpx;
}
.shopName{
    /*padding-top: 26rpx;*/
    /*padding-left: 24rpx;*/
    display: flex;
    align-items: center;
}
.shopName image{
    width: 30rpx;
    height: 30rpx;
    /*margin-left: 98rpx;*/
}
.shopName text{
    font-size:28rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight: bold;
    color:rgba(51,51,51,1);
}
.delivery{
    margin-top: 64rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 24rpx;
    color:rgba(51,51,51,1);
    font-weight: 400;
}
.delivery .deliveryDetail text{
    color: #999999;
}
.subtotal{
    margin-top: 32rpx;
    text-align: right;
    font-size: 24rpx;
    color:rgba(51,51,51,1);
}
.subtotal text{
    color: #FF3C3C;
}
.payment{
    height: 123rpx;
    border-top: 1px solid #E6E6E6;
    padding: 0rpx 24rpx 0rpx 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.count text:nth-child(1){
    font-size: 24rpx;
    color: #333;
}
.count text:nth-child(2){
    font-size: 20rpx;
    color: #FF3C3C;
}
.count text:nth-child(3){
    font-size: 44rpx;
    color: #FF3C3C;
    font-weight: bold;
}
.btn{
    width:228rpx;
    height:88rpx;
    background:rgba(75,154,237,1);
    border-radius:44rpx;
    margin: 0rpx;
    color: #fff;
    font-weight: normal;
}
.modify{
    position: absolute;
    right: 0rpx;
    top: 55rpx;
    font-size: 26rpx;
    color:rgba(153,153,153,1);
    display: flex;
    align-items: center;
}




















