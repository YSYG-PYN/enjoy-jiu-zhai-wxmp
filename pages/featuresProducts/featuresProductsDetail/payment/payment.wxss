/* pages/featuresProducts/featuresProductsDetail/payment/payment.wxss */
page{
    height: 100%;
}
#box{
    padding: 0px 12px;
    box-sizing: border-box;
    margin: 0px;
    position: relative;
    height: 100%;
}
.title{
    height: 148rpx;
    line-height: 148rpx;
    font-size: 36rpx;
    font-weight: bold;
    color:rgba(51,51,51,1);
}
.orderMsg{
    height: 102rpx;
    background:rgba(75,154,237,.1);
    border-radius:3px;
    padding: 10rpx 0rpx 0rpx 20rpx;
    margin-bottom: 40rpx;
}
.orderMsg view:first-child{
    font-size: 28rpx;
    font-weight: bold;
    color:rgba(102,102,102,1);
    line-height: 40rpx;
}
.orderMsg view:last-child{
    font-size: 24rpx;
    color:rgba(102,102,102,1);
    line-height: 34rpx;
}
.orderMsg view:last-child text{
    color: #4698F0;
    font-weight: bold;
}
.content{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.commodity view:nth-child(1){
    font-size: 28rpx;
    font-weight: bold;
    color:rgba(51,51,51,1);
    margin-bottom: 20rpx;
}
.commodity view:nth-child(2){
    font-size: 24rpx;
    color:rgba(153,153,153,1);
    margin-bottom: 10rpx;
}
.commodity view:nth-child(3){
    font-size: 24rpx;
    color:rgba(153,153,153,1);
}
.commodityPic image{
    width: 140rpx;
    height: 140rpx;
}
.commodityMoney{
    height: 124rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.commodityMoney view:nth-child(1){
    font-size: 32rpx;
    font-weight: bold;
    color:rgba(51,51,51,1);
}
.commodityMoney view:nth-child(2) text:first-child{
    font-size: 20rpx;
    color: #FF3C3C;
}
.commodityMoney view:nth-child(2) text:last-child{
    font-size: 44rpx;
    color: #FF3C3C;
    font-weight: bold;
}
#pay{
    width: 93%;
    height: 88rpx;
    background:rgba(75,154,237,1);
    border-radius:22px;
    margin: 0;
    color: #fff;
    font-size: 36rpx;
    position: absolute;
    bottom: 20rpx;
    padding: 0;
}



















