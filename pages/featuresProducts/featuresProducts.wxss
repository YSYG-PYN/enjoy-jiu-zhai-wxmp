.index_searchIpt_content{
  display: flex;
  align-items: center;
  background-color: #fff;
  width: 100%;
}

.search{
  width:90%;
}

.tip{
  width: 48rpx;
  height: 44rpx;
  position: relative;
}

.features_products{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.btn{
  width: 95%;
  margin-top: 48rpx;
}
.px{
  width:144rpx;
  height:60rpx;
  background:rgba(75,154,237,1);
  border-radius:3px;
  font-size: 24rpx;
  line-height: 60rpx;
  font-weight: bold;
  color: #fff;
  display: inline-block;
  padding: 0rpx;
}
.sx{
  width:104rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 4px 1px rgba(0,0,0,0.1);
  border-radius:3px;
  font-size: 24rpx;
  line-height: 60rpx;
  font-weight: bold;
  color: #333333;
  margin-left: 40rpx;
  display: inline-block;
  padding: 0rpx;
}
.productsList{
  margin-top: 50rpx;
  width: 95%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

}
.proDetail{
  width: 344rpx;
  height: 563rpx;
  margin-bottom: 40rpx;
  box-shadow:0rpx 0rpx 8rpx 2rpx rgba(0,0,0,0.1);
  border-radius:8rpx;
}
.proDetail image{
  width: 100%;
  height: 348rpx;
}
.productsDetail{
  padding: 16rpx 12rpx 0rpx;
}
.productsName{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.proIntroduce{
  margin-top: 12rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  color:rgba(102,102,102,1);
}
.money{
  font-size:20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:bold;
  color:rgba(255,60,60,1);
}
.amount{
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:bold;
  color:rgba(255,60,60,1);
}
