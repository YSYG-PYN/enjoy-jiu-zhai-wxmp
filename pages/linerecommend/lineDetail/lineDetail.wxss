/* pages/linerecommend/lineDetail/lineDetail.wxss */
.line_detail {
	display: flex;
	flex-direction: column;
	width: 100%;
	align-items: center;
	justify-content: center;
	overflow-x: hidden;
	font-size: 28rpx;
}

.line_detail_img {
	width: 100%;
	height: 450rpx;
	box-sizing: border-box;
}

.line_detail_img image {
	width: 100%;
	height: 100%;
}

.detail_introduce {
	font-weight: 600;
	width: 100%;
	padding-left: 20rpx;
	box-sizing: border-box;
	line-height: 32px;
	margin: 10rpx 0;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.detail_content{
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.tourism_line_tit{
	width: 300rpx;
	line-height: 80rpx;
	border: 1px solid #ccc;
	text-align: center;
	border-radius: 5px;
}
.detail_line{
	width: 100%;
	margin: 30rpx 0;
	text-align: center;
	margin-bottom: 36rpx;
}
.detail_line text{
	font-size: 30rpx;
	line-height: 32px;
	margin: 0 8rpx;
}
.tourism_image,.tourism_line,.tourism_introduce{
	width: 100%;
	box-sizing: border-box;
	padding: 0 30rpx;
	color: #888;
}
.tourism_line{
	padding: 16rpx;
	color: #000;
	font-size: 30rpx;
	margin: 12rpx 0;
}
.time{
	padding-left: 8rpx;
	margin-right: 100rpx;
}
.tourism_image{
	width: 100%;
	height: 400rpx;
	padding: 30rpx;
	margin-top: 40rpx;
}
.tourism_image image{
	width:100%;
	height: 100%;
}
.tourism_detail{
	color: #888;
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
}


.tourism_guide{
	width: 100%;
	padding: 16rpx;
	box-sizing: border-box;
}
.tourism_guide_content{
	width: 100%;
	border: 1px solid #ccc;
	padding: 16rpx;
	box-sizing:border-box;
}
.openTime{
	display: flex;
}
.openTime text{
	line-height: 32px;
}
.openTime view:first-of-type{
	width: 150rpx;
}
.openTime view:nth-of-type(2){
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}
.guide_tit,.guide_address{
	width: 100%;
	margin-bottom: 10rpx;
	line-height: 32px;
}
.toast{
	width: 100%;
	text-align: center;
	color: #888;
	margin-top: 50rpx ;
	margin-bottom: 30rpx;
}
.other_line{
	line-height: 42px;
	width: 100%;
	box-sizing: border-box;
	padding-left: 16rpx;
}
.tourism_bottom{
	margin:30rpx 0;
	margin-top: 0;
}
