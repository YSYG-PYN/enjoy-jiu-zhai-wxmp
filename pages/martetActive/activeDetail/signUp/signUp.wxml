<!--pages/martetActive/activeDetail/signUp/signUp.wxml-->
<view id="box">
    <view class="content">
        <view class="top">
            <image src="http://img1.imgtn.bdimg.com/it/u=2697436101,3290950844&fm=26&gp=0.jpg"></image>
            <view>
                <text>家寨沟大峡谷游泳比赛</text>
                <text>￥100.00</text>
            </view>
        </view>
        <view class="msg">
            <van-cell-group>
                <van-field
                        required
                        clearable
                        label="姓名"
                        placeholder="请输入姓名"
                />
                <van-field
                        required
                        clearable
                        label="手机"
                        placeholder="请输入手机号"
                />
                <van-field
                        required
                        clearable
                        label="年龄"
                        placeholder="请输入年龄"
                />
                <van-cell title="性别">
                    <van-radio-group value="{{ radio }}" bind:change="onChange">
                        <van-radio name="1">单选框 1</van-radio>
                        <van-radio name="2">单选框 2</van-radio>
                    </van-radio-group>
                </van-cell>
            </van-cell-group>
        </view>
    </view>
</view>
