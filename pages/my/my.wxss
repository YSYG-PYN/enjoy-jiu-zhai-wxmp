page{
	background-color: #F3F7FA;
}
.box{
	padding: 0 20rpx;
	font-size: 30rpx;
}
.header{
	/*width: 100%;*/
	height: 300rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	position: relative;
	margin-bottom: 20rpx;
	padding: 0 24rpx;
}
.myBg{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
}
.ChatHead{
	border-radius:50%;
	overflow: hidden;
	/*position: absolute;
	left:300rpx;
	top: 50rpx;*/
	display: flex;
	justify-content: space-between;
}
.ChatHead image{
	width: 150rpx;
	height: 150rpx;
	display: block;
	margin-right: 20rpx;
}
.login{
	/*position: absolute;
	top: 230rpx;
	left:310rpx ;*/
	display: flex;
	flex-direction: column;
}
.login view:nth-child(1){
	font-size:45rpx;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:63rpx;
}
.login view:nth-child(2){
	font-size:22rpx;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:30rpx;
	margin-bottom: 10rpx;
}
.order{
	background-color: #fff;
	padding: 40rpx 24rpx 0;
	margin-bottom: 20rpx;
}
.orderTitle{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.title{
	font-size: 32rpx;
	font-weight: 600;
	color: #333333;
}
.allOrder{
	width:145rpx;
	height:40rpx;
	border-radius:20rpx;
	border:1px solid #EEEEEE;
	text-align: center;
	line-height: 40rpx;
	font-size:22rpx;
	font-weight:400;
	color:rgba(204,204,204,1);
	display: flex;
	justify-content: space-around;
	align-items: center;

}
.actionText{
	font-size: 24rpx;
	color: #666666;
	font-weight:400;
	margin-top: 15rpx;
}
.inCommon{
	background-color: #fff;
	/*padding: 40rpx 24rpx 0;*/
}
.inCommonList{
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 15rpx 30rpx;
	border-bottom: 1px solid #E5E5E5;
}
.inCommonList>view:first-child{
	display: flex;
	align-items: center;
}
.inCommonList>view:first-child image{
	width: 58rpx;
	height: 58rpx;
	margin-right: 20rpx;
}
.inCommonList>view:first-child text{
	font-size:28rpx;
	color: #000;
	font-weight:400;
}
