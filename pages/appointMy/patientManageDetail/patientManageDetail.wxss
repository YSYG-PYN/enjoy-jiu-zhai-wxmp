
page {
  display: block;
  background-color: #f5f5f5;
  font-family: "微软雅黑";
  font-size: 28rpx;
}


.list{
  position: relative;
  z-index: 2;
  overflow: hidden;
  background-color: white;
  margin-top: 2rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  min-height: 80rpx;
}
.delete{
  position: absolute;
  top:0rpx;
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 1;
  right: 0;
  color: #fff;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.info{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.info view:first-child{
  text-align: center;
  font-size: 35rpx;
  margin-bottom: 10rpx;
}
.info view:nth-child(2){
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.def{
  font-size: 30rpx;
  border:1rpx solid red;
  border-radius: 5rpx;
  padding:0 10rpx;
  color: red;
  margin-right: 10rpx;
}
.phone{
  color:gray;font-size:30rpx;margin: 0 20rpx;
}
.edit{
  padding:40rpx;
}
.deleteBtn{ 
  padding: 40rpx;
  float: right;
  margin-right: 30rpx;
}

.edit image{
  width: 40rpx;
  height: 40rpx;
  margin-left:10rpx;
}

.patientMessage-container{
  width: 100%;
  /* padding: 10rpx 10rpx; */

}
.weui-cell__patientmessage{
  background-color: white;
  border: 1px solid #ededed;
  margin-top: 10rpx;
  padding: 10rpx 15rpx;
  flex-direction: row wrap;
}
.weui-cell__patientname{
  margin-left: 20px;
  color: coral;
  font: 30rpx;
  height: 60rpx;
  margin-top: 5px;
}
.weui-cell__patientidcard{
  float: right;
  margin-right: 10rpx;
  color: burlywood;
}

.weui-cell__hd  {
  background-color: white;
  border: 1px solid #ededed;
  align-items: center;
   height: 50rpx;
  margin-top: 10rpx;
  padding: 8rpx 5rpx;
   flex-direction: row wrap;
}

.weui-cell__hd  image{
  margin-left: 10px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}
.weui-cell__bd{
 margin-left: 10px;
  color: coral;
  margin-top: 5px;
}
.weui-cell__remarktext{
  float: right;
  color: gray;
  margin-right: 5rpx;

}

.weui-cells::after{
  content: none;
  border-bottom: none;
}

.weui-cells::before{
  border-top: none;
}

.patientMessage-bottom{
  background-color: white;
  margin-top: 10rpx;
  padding: 5rpx 5rpx;

}
.patientBottom-remarktext{
  color: gainsboro;
  margin-bottom: 2rpx;
}
