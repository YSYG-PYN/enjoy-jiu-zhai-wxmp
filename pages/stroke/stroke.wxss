/* pages/stroke/stroke.wxss */
.stroke_content {
	display: flex;
	flex-direction: column;
	width: 100%;
	font-size: 12px;
}

.stroke_list {
	width: 100%;
	border: 1px solid #ccc;
	border-left: none;
	border-right: none;
	margin-bottom: 40rpx;
}

.stroke_tit,
.stroke_detail {
	display: flex;
	justify-content: space-between;
	padding-top: 16rpx;
	border-bottom: 1px solid #eee;
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
}

.stroke_tit {
	line-height: 32px;
}

.stroke_tit text:first-of-type {
	font-weight: 600;
	font-size: 14px;
}

.stroke_detail {
	flex-direction: row;
	font-size: 12px;
	padding: 20rpx;
	justify-content: flex-start;
}

.stroke_detail image {
	width: 180rpx;
	height: 180rpx;
	margin-right: 40rpx;
}

.detail_tit {
	display: flex;
	justify-content: space-between;
}

.detail_tit text:nth-of-type(2) {
	font-size: 16px;
	font-weight: 600;
}

.detail_time text {
	margin-right: 30rpx;
	color: #888;
}

.stroke_introduce {
	width: calc(100% - 180rpx);
}

.stroke_introduce text {
	line-height: 24px;
}

.time {
	width: 100%;
	display: flex;
	text-align: center;
	justify-content: space-between;
}

.startTime view,
.endTime view {
	font-weight: 600;
	font-size: 18px;
}

.ticket_price_content {
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
	align-items: flex-end;
}

.ticket_tit {
	font-size: 14px;
}

.ticket_price {
	font-size: 16px;
}

.ticket_price view:first-of-type {
	font-weight: 600;
}

.ticket_price view:nth-of-type(2) {
	font-size: 12px;
	color: #888;
}

.line_content_image {
	position: relative;
}

.line_content_image image {
	width: 300rpx;
	height: 300rpx;
}

.line_content_image .active_label {
	position: absolute;
	left: 0;
	top: 0;
	background: #fff;
	padding: 10rpx 20rpx;
	border: 1px solid #ccc;
	border-radius: 10px 0 0 0;
}

.show_none {
	width: 100%;
	height: 400rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.show_none image {
	width: 200rpx;
	height: 200rpx;
	margin-bottom: 40rpx;
}

.none_strokelist {
	font-size: 28rpx;
	font-weight: 600;
}

.active_tit,
.recommend {
	width: 100%;
	box-sizing: border-box;
	padding-left: 30rpx;
	font-weight: 600;
	line-height: 32px;
	margin-bottom: 20rpx;
	font-size: 28rpx;
}

.recommend {
	margin: 10rpx 0;
	border-bottom: 1px solid #ccc;
}

.recommend_content {
	width: 100%;
	display: flex;
	box-sizing: border-box;
	padding: 20rpx 30rpx;
	align-content: center;
}

.recommend_content image {
	width: 200rpx;
	height: 180rpx;
	margin-left: 80rpx;
	margin-bottom: 20rpx;
}

.recommend_detail {
	border-bottom: 1px solid #ccc;
	width: calc(100% - 280rpx);
}

.recommend_tit,
.recommend_intro text {
	line-height: 24px;
}
.recommend_tit{
	font-size: 26rpx;
}

.recommend_intro,.recommend_detail_content{
	margin-bottom: 40rpx;
	display: flex;
	justify-content: space-between;
}
.recommend_detail_content{
	margin-bottom: 0;
}
.recommend_detail_content view text{
	margin-right: 30rpx;
}
.recommend_price {
	color: red;
	font-weight: 600;
	font-size: 16px;
}
