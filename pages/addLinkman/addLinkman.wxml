<!--pages/addLinkman/addLinkman.wxml-->
<view class="box">
       <view class="input">
              <label>姓名</label>
              <input placeholder="请输入您的姓名"></input>
        </view>
         <view class="input">
              <label>手机号</label>
              <input placeholder="请输入您的手机号码"></input>
        </view>
         <view class="input">
              <label>选择证件</label>
             <van-dropdown-menu>
                <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
              </van-dropdown-menu>
        </view>
         <view class="input">
              <label>身份证</label>
              <input placeholder="请输入您的手机号码"></input>
        </view>
        <view class="switch">
          <label>设为默认</label>
           <van-switch checked="{{ checked }}"  inactive-color="#ccc" bind:change="onChange" />
        </view>
</view>

<view class="fouter">
    <van-button type="primary" block bindtap="addLinkman">保存</van-button>
</view>
