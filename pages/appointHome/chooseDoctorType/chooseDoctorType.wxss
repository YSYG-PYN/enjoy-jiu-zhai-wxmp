.weui-tab {
  position: relative;
  background: white;
  height: 100%;
}
.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  /* top: 0; */
  width: 100%;
  /* border-bottom: 1rpx solid #CCCCCC; */
}
.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 10px 0;
  text-align: center;
  font-size: 0;
}
.weui-navbar__item.weui-bar__item_on {
  color: #1b82d1;
}
.weui-navbar__title {
  display: inline-block;
  font-size:28rpx;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 50%;
  height: 3px;
  background-color: #1b82d1;
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}
.weui-tab__panel {
  box-sizing: border-box;
  height: 100%;
  padding-top: 45px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
