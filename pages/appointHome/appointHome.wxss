  display: flex;
  flex-flow: row wrap;
  text-align: center;
  font-size: 12px;
  justify-content: space-between;
}

/* 子项 图片与文字一致 */
.guide_detail_item {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  width: 160rpx;
  padding: 20rpx 0;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

