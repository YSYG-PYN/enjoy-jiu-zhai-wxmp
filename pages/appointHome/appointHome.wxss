}

.doctors-scroll-x {
  width: 100%;
  margin-top: 20rpx;
  white-space: nowrap;
}

.doctors-scroll-x .item {
  display: inline-block;
  border: 1px solid #dedede;
  border-radius: 5px;
  margin: 0 30rpx 0 0;
}

.btn-quick-book {
  font-size: 23rpx;
  color: #32a3d6;
  line-height: 2;
  background-color: #fff;
}

.doctors-scroll-x .page-column image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
}

.doctors-scroll-x .text {
  font-size: 30rpx;
  color: #333;
  margin-top: 10rpx;
  display: inline-block;
}

.doctors-scroll-x .text2 {
  font-size: 23rpx;
  color: #999;
  margin: 10rpx 0 8px 4px;
  display: inline-block;
}

.medical-name, .info-time, .news-tag, page wx-text {
  font-size: 28rpx;
}

.news-tag {
  color: #32a3d6;
